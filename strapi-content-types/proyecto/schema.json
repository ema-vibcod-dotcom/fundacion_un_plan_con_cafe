{
  "kind": "collectionType",
  "collectionName": "proyectos",
  "info": {
    "singularName": "proyecto",
    "pluralName": "proyectos",
    "displayName": "Proyecto",
    "description": "Proyectos de la fundaci√≥n"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "descripcion": {
      "type": "richtext",
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "en_curso",
        "completado",
        "urgente"
      ],
      "default": "en_curso",
      "required": true
    },
    "fechaInicio": {
      "type": "date",
      "required": true
    },
    "fechaFinalizacion": {
      "type": "date"
    },
    "galeriaImagenes": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "videoCorto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    },
    "voluntarios": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "porcentajeFinanciado": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "socios": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
