{
  "kind": "collectionType",
  "collectionName": "episodios_podcast",
  "info": {
    "singularName": "episodio-podcast",
    "pluralName": "episodios-podcast",
    "displayName": "Episodio Podcast",
    "description": "Episodios del podcast"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "descripcion": {
      "type": "richtext",
      "required": true
    },
    "fecha": {
      "type": "date",
      "required": true
    },
    "urlSpotify": {
      "type": "string",
      "required": false
    },
    "urlApplePodcast": {
      "type": "string",
      "required": false
    },
    "urlYoutube": {
      "type": "string",
      "required": false
    },
    "imagenPortada": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    },
    "numeroEpisodio": {
      "type": "integer",
      "unique": true,
      "required": false,
      "min": 1
    }
  }
}
